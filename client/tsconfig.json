{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "types": ["vite/client", "cypress", "node"],

    // We're using Vite to build, therefore we don't need TS to create the files,
    // we only want TS to type check
    "noEmit": true,

    // Some dependencies don't pass strict mode
    "skipLibCheck": true
  },
  "include": [
    "src/**/.*ts",
    "src/**/*.tsx",
    "cypress/**/*.ts",
    "cypress/**/*.tsx",
    "cypress.config.ts"
  ]
}
