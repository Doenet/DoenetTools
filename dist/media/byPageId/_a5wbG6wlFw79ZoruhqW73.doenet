        <cell>U</cell><cell>V</cell><cell>W</cell><cell>X</cell><cell>Y</cell>
        <cell>Z</cell><cell></cell><cell>.</cell><cell>,</cell><cell>!</cell>
        <cell>?</cell>
      </row>
      <row>
        <cell>=mod((code(a1)-65)+$key,26)</cell><cell>=mod((code(b1)-65)+$key,26)</cell>
