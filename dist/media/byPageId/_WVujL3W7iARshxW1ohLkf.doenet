<setup>
  <variantControl nVariants="5" />
  <module name="divAlg" newNamespace >
    <setup>
      <customAttribute componentType="math" attribute="A" defaultValue="2" assignNames="A" />
      <customAttribute componentType="math" attribute="B" defaultValue="2" assignNames="B" />
    </setup>
    <row>
      <cell>
        <m>a=$A, b=$B</m>
      </cell>
      <cell>
        Quotient: <mathinput name="Q" /> Remainder: <mathinput name="R" />
        <answer>
          <award targetsAreResponses="Q R" matchPartial>
            <when> $Q=floor($A/$B) and $R=<math simplify>mod($A,$B)</math></when>
          </award>
        </answer>
      </cell>
    </row>
  </module>
</setup>

