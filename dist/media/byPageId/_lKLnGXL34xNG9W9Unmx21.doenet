      <when>
        $a00=-1 and $a01=2 and $a02=0 and $a03=-2 and $a04=1 and
        $a10=2 and $a11=1 and $a12=0 and $a13=-1 and $a14=-2 and
        $a20=0 and $a21=0 and $a22=0 and $a23=0 and $a24=0 and
        $a30=-2 and $a31=-1 and $a32=0 and $a33=1 and $a34=2 and
