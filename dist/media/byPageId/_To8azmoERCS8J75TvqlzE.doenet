      <choice credit="$mc3=A">A</choice>
      <choice credit="$mc3=B">B</choice>
      <choice credit="$mc3=C">C</choice>
      <choice credit="$mc3=D">D</choice>
      <choice credit="$mc3=E">E</choice>
    </choiceinput>
  </answer>
</p>

  <p>4. $q4 matches  <answer>
    <choiceinput inline>
      <choice credit="$mc4=A">A</choice>
      <choice credit="$mc4=B">B</choice>
      <choice credit="$mc4=C">C</choice>
      <choice credit="$mc4=D">D</choice>
      <choice credit="$mc4=E">E</choice>
    </choiceinput>
  </answer>
</p>

  <p>5. $q5 matches  <answer>
    <choiceinput inline>
      <choice credit="$mc5=A">A</choice>
      <choice credit="$mc5=B">B</choice>
      <choice credit="$mc5=C">C</choice>
      <choice credit="$mc5=D">D</choice>
      <choice credit="$mc5=E">E</choice>
    </choiceinput>
  </answer>
</p>


</problem>
