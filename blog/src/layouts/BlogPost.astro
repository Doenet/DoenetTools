---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";

type PostNav = {
  title: string;
  url: string;
};

type Props = CollectionEntry<"blog">["data"] & {
  previousPost: PostNav | null;
  nextPost: PostNav | null;
};

const {
  title,
  description,
  author,
  organization,
  pubDate,
  updatedDate,
  previousPost,
  nextPost,
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0 0;
        text-align: left;
      }
      .subtitle {
        margin: 0 0 1em 0;
        color: rgb(var(--gray));
        font-size: 1.5rem;
        line-height: 1.4;
        font-weight: 500;
      }
      .author {
        margin: 0 0 0.25em 0;
        color: rgb(var(--gray));
        font-size: 0.95rem;
        font-style: italic;
      }
      .date {
        margin: 0 0 1em 0;
        color: rgb(var(--gray));
        font-size: 0.95rem;
        font-style: italic;
      }
      .last-updated-on {
        font-style: italic;
      }
      .post-nav {
        display: flex;
        gap: 1.5rem;
        margin-top: 3.5rem;
      }
      .post-nav a {
        display: block;
        padding: 0.75rem 1rem;
        border: 1px solid rgb(var(--gray-light));
        border-radius: 10px;
        text-decoration: none;
        color: inherit;
        max-width: 48%;
      }
      .post-nav .label {
        display: block;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: rgb(var(--gray));
        margin-bottom: 0.25rem;
      }
      .post-nav .title {
        margin: 0;
        font-size: 1rem;
        line-height: 1.4;
      }
      .post-nav .next {
        margin-left: auto;
        text-align: right;
      }
      @media (max-width: 720px) {
        .post-nav {
          flex-direction: column;
        }
        .post-nav a {
          max-width: 100%;
        }
        .post-nav .next {
          margin-left: 0;
          text-align: left;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="prose">
          <div class="title">
            <h1>{title}</h1>
            <p class="subtitle">{description}</p>
            <div class="author">
              By: {author}{organization ? ` (${organization})` : ""}
            </div>
            <div class="date">
              Posted on <FormattedDate date={pubDate} />
            </div>
            {
              updatedDate && (
                <div class="last-updated-on">
                  Last updated on <FormattedDate date={updatedDate} />
                </div>
              )
            }
            <hr />
          </div>
          <slot />
          {
            (previousPost || nextPost) && (
              <nav class="post-nav" aria-label="Post navigation">
                {previousPost && (
                  <a href={previousPost.url} class="previous">
                    <span class="label">Previous</span>
                    <span class="title">{previousPost.title}</span>
                  </a>
                )}
                {nextPost && (
                  <a href={nextPost.url} class="next">
                    <span class="label">Next</span>
                    <span class="title">{nextPost.title}</span>
                  </a>
                )}
              </nav>
            )
          }
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
