{
  "extends": "../tsconfig.react.json",
  "compilerOptions": {
    "composite": true,
    // Cypress tests are not compiled by tsc, so we set noEmit to true.
    // Cypress will use ts-node to compile the tests on the fly.
    "noEmit": true,
    "sourceMap": true,
    "types": ["node", "cypress", "cypress-axe"],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo/tests-cypress.tsbuildinfo"
  },
  "include": ["**/*.ts"]
}
