// This is the base tsconfig file that is extended by both client and server tsconfig files.
{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,

    /* Module settings */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "allowJs": false,

    "sourceMap": true,

    /* Strictness */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "baseUrl": "."
  },
  "files": [],
  "references": [
    { "path": "blog" },
    { "path": "client" },
    { "path": "server" },
    { "path": "shared" },
    { "path": "tests-cypress" }
  ]
}
