// This is the base tsconfig file that is extended by both client and server tsconfig files.
{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,

    /* Module settings */
    "resolveJsonModule": true,
    "isolatedModules": true,
    // Not sure why this is Node 10 instead of Node 16 or NodeNext, but using Passport with TS needed it.
    "moduleResolution": "node10",

    "allowJs": false,

    /* Strictness */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    /* Path alias support */
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  }
}
